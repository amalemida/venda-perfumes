<br><h1>Listagem do CLIENTE selecionado</h1><br><br>

<form name="frmDados" method="post" action="/clientes/atualiza">
<div>
  <table class="table" width="40%">
    <tbody>
      <div>
      <table class="table" width="40%">
        <tr>
          <td><label for="id">ID do Cliente:</label></td>
          <td><input type="text" id="id" name="id" readonly size="5" value="${data.clientes.idClie}"/></td>
        </tr>

        <tr>
          <td><label for="nome">Nome do Cliente:</label></td>
          <td><input type="text" id="nome" name="nome" size="20" value="${data.clientes.nomeClie}"/></td>
        </tr>

        <tr>
          <td><label for="data">Data Aniversario (aaaa/mm/dd):</label></td>
          <td><input type="text" id="niver" name="niver" size="50" value="${data.clientes.dataNiverClie}"/></td>
        </tr>

        <tr>
          <td><label for="email">Email:</label></td>
          <td><input type="text" id="email" name="email" size="40" value="${data.clientes.emailClie}"/></td>
        </tr>

        <tr>
          <td><label for="cpf">CPF:</label></td>
          <td><input type="text" id="cpf" name="cpf" size="11" value="${data.clientes.cpfClie}"/></td>
        </tr>
      </table>
        <br>
        <input type="submit" value="Salvar Dados" />
      </div>
    </tbody>
  </table>
  </div>
</form>
