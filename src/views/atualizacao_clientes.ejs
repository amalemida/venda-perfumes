<html>
<head>
  <%- include('../views/parciais/head'); %>
  
</head>
<body style="margin-left: 50px">
  <br><h1>Listagem do CLIENTE selecionado</h1><br><br>

  <form name="frmDados" method="post" action="/clientes/atualiza">
  <div>
    <table class="table">
      <tbody>
        <div>
        <table class="table-mm">
          <tr>
            <td><label for="id">ID do Cliente:</label></td>
            <td><input type="text" id="id" name="id" readonly size="1" value="<%= cliente.idCliente %>"/></td>
          </tr>

          <tr>
            <td><label for="nome">Nome do Cliente:</label></td>
            <td><input type="text" id="nome" name="nome" size="30" value="<%= cliente.nome %>"/></td>
          </tr>

          <tr>
            <td><label for="data">Data Nascimento:</label></td>
            <td><input type="date" id="niver" name="niver" size="10" value="<%= cliente.dataNiver %>"/></td>
          </tr>

          <tr>
            <td><label for="email">Email:</label></td>
            <td><input type="text" id="email" name="email" size="30" value="<%= cliente.email %>"/></td>
          </tr>

          <tr>
            <td><label for="cpf">CPF:</label></td>
            <td><input type="text" id="cpf" name="cpf" size="11" value="<%= cliente.cpf %>"/></td>
          </tr>

          <tr>
            <td><label for="endereco">Endere√ßo:</label></td>
            <td><input type="text" id="endereco" name="endereco" size="60" value="<%= cliente.endereco %>"/></td>
          </tr>
        </table>
          <br>
          <input type="submit" value="Salvar Dados" />
        </div>
      </tbody>
    </table>
    </div>
  </form>
  <footer class="footer">
    <a class="btn btn-primary" role="button" href="/menu">Voltar ao menu</a>
  </footer>
</body>
</html>