<html>
  <head>
    <%- include('../views/parciais/head'); %>
  </head>

  <body style="margin-left:50px">
    <br />
    <h1>Incluindo Novo Cliente</h1>
    <br /><br />

    <header class="cabecalhoFundo"></header>

    <div>
      <form action="/clientes/incluiClientes" method="post">
        <main class="conteudo-principal">
          <div class="tabela-acesso">
            <input type="hidden" id="id" name="id" />

            <table class="table-mm">
              <tr>
                <td><label for="nome">Nome:</label></td>
                <td><input type="text" id="nome" name="nome" size="40" /></td>
              </tr>

              <tr>
                <td><label for="data">Data Nascimento:</label></td>
                <td><input type="date" id="niver" name="niver" size="10" placeholder="aaaa-mm-dd"/></td>
              </tr>

              <tr>
                <td><label for="email">Email:</label></td>
                <td><input type="text" id="email" name="email" size="30" /></td>
              </tr>

              <tr>
                <td><label for="cpf">CPF:</label></td>
                <td><input type="text" id="cpf" name="cpf" size="11" /></td>
              </tr>

              <tr>
                <td><label for="endereco">Endere√ßo:</label></td>
                <td><input type="text" id="endereco" name="endereco" size="60" /></td>
              </tr>
            </table>
            <br />
            <input
              type="submit"
              value="Inserir Dados"
              class="btn btn-secondary"
            />
          </div>
        </main>
      </form>
    </div>
  </body>
  <footer class="footer">
    <a class="btn btn-primary" role="button" href="../menu">Voltar ao menu</a>
  </footer>
</html>
